@model CURDOprationsDimo.Models.Estudiante

@{
    ViewData["Title"] = Model != null ? "Edit":"Create";
}

<h1>@ViewData["Title"] Estudiantes</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["Title"]" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="EstudiantesId"  class="form-control" readonly/>
                

            <div class="form-group">
                <label asp-for="EstudiantesName" class="control-label"></label>
                <input asp-for="EstudiantesName" class="form-control" />
                <span asp-validation-for="EstudiantesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstudiantesLastName" class="control-label"></label>
                <input asp-for="EstudiantesLastName" class="form-control" />
                <span asp-validation-for="EstudiantesLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarreraId" class="control-label"></label>
                <select asp-for="CarreraId" class="form-control" 
                asp-items="@(new SelectList(ViewBag.Carrera,"CarreraId","CarreraName"))">
                <option value="">Selecciona la carrera ...</option>
                </select>
                <span asp-validation-for="CarreraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
